<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="kindling.com.helloworld.MatchingActivity">

    <ImageView
        android:id="@+id/imageTopView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="center"
        android:src="@drawable/tan_msg_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType = "centerInside"
        android:src="@drawable/msg_btn"
        android:background = "@null"
        android:id="@+id/messageButton"
        android:layout_marginRight = "8dp"
        android:layout_alignTop="@+id/machingOwl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/header_settings"
        android:layout_gravity="top|left"
        android:background = "@null"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/machingOwl"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:background = "@null"
        android:src="@drawable/kindling_owl_large" />


    <ImageView
        android:id="@+id/backDrop"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@null"
        android:layout_below="@+id/imageTopView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/matching_button"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/matchingbtns_backdrop"
        android:layout_below="@+id/backDrop"
        android:layout_alignLeft="@+id/imageTopView"
        android:layout_alignStart="@+id/imageTopView" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_alignTop="@+id/rightButton"
        android:layout_toLeftOf="@+id/machingOwl"
        android:layout_toStartOf="@+id/machingOwl"
        android:scaleType="centerCrop"
        android:src="@drawable/swipe_left_btn" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:layout_above="@+id/informationButton"
        android:layout_toRightOf="@+id/machingOwl"
        android:scaleType="centerCrop"
        android:src="@drawable/swipe_right_btn" />

    <ImageButton
        android:id="@+id/informationButton"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="@null"
        android:layout_alignBottom="@+id/matching_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/information_btn" />

    <com.andtinder.view.CardContainer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_width="270dp"
        android:layout_height="270dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_new_matches"
        android:paddingTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/cardContainer"
        android:src="@drawable/no_new_matches_flat" />

</RelativeLayout>
