<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/math_game">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/tan_msg_background"
        android:id="@+id/imageTopView_math"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/timer_bg"
        android:id="@+id/mathGame_timerBg"
        android:layout_marginRight="-17dp"
        android:layout_below="@+id/imageTopView_math"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:src="@drawable/definition_game_title"
        android:id="@+id/mathGame_title"
        android:layout_alignBottom="@+id/mathGame_timerBg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/header_owl"
        android:id="@+id/mathGame_owl"
        android:layout_below="@+id/mathGame_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/game_question_bg"
        android:id="@+id/mathGame_question"
        android:layout_alignTop="@+id/mathGame_questionText"
        android:layout_alignLeft="@+id/mathGame_answerImage1"
        android:layout_alignStart="@+id/mathGame_answerImage1" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:id="@+id/mathGame_questionText"
        android:text="Here is the Question!!!!!!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/mathGame_answerImage1"
        android:layout_below="@+id/mathGame_question"
        android:layout_marginTop = "10dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/mathGame_AnswerButton1"
        android:text="Answer 1!!"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/mathGame_answerImage1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/mathGame_answerImage2"
        android:layout_below="@+id/mathGame_answerImage1"
        android:layout_marginTop = "6dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/mathGame_AnswerButton2"
        android:text="Answer 2!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/mathGame_AnswerButton1"
        android:layout_marginTop = "9dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/mathGame_answerImage3"
        android:layout_below="@+id/mathGame_answerImage2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal = "true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/mathGame_AnswerButton3"
        android:text="Answer 3!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/mathGame_AnswerButton2"
        android:layout_marginTop = "6dp"
        android:layout_centerHorizontal = "true"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/mathGame_answerImage4"
        android:layout_below="@+id/mathGame_answerImage3"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal = "true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/mathGame_AnswerButton4"
        android:text="Answer 4!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/mathGame_AnswerButton3"
        android:layout_marginTop = "9dp"
        android:layout_centerHorizontal = "true"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/mathGame_timerBg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/mathGame_time"
        android:text="Timer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/mathGame_counter"
        android:text="0:20"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/mathGame_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"/>


</RelativeLayout>