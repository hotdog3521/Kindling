<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kindling.com.helloworld.MainMessagesActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:scaleType="fitXY"
        android:src="@drawable/message_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageView2" />




    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon1"
        android:layout_above="@+id/user_chatting_Icon2"
        android:layout_toLeftOf="@+id/chat_text2"
        android:layout_toStartOf="@+id/chat_text2"
        android:layout_marginBottom="20dp"
        android:background="@null"/>



    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon2"
        android:layout_above="@+id/user_chatting_Icon3"
        android:layout_alignLeft="@+id/user_chatting_Icon6"
        android:layout_alignStart="@+id/user_chatting_Icon6"
        android:layout_marginBottom="20dp"
        android:background="@null"/>



    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon3"
        android:layout_above="@+id/user_chatting_Icon4"
        android:layout_toLeftOf="@+id/chat_text5"
        android:layout_toStartOf="@+id/chat_text5"
        android:layout_marginBottom="20dp"
        android:background="@null"/>



    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon4"
        android:layout_above="@+id/user_chatting_Icon5"
        android:layout_toLeftOf="@+id/chat_text5"
        android:layout_toStartOf="@+id/chat_text5"
        android:layout_marginBottom="20dp"
        android:background="@null"/>



    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon5"
        android:layout_above="@+id/user_chatting_Icon6"
        android:layout_toLeftOf="@+id/chat_text2"
        android:layout_toStartOf="@+id/chat_text2"
        android:layout_marginBottom="20dp"
        android:background="@null"/>



    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/user_chatting_Icon6"
        android:layout_marginBottom="60dp"
        android:background="@null"
        android:layout_above="@+id/chat_edit_text"
        android:layout_toLeftOf="@+id/chat_text4"
        android:layout_toStartOf="@+id/chat_text4" />


    <ImageView
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/msg_write_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />


    <EditText
        android:id="@+id/chat_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/chat_hint"
        android:inputType="text"
        android:background="@null"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/user_chatting_Icon6"
        android:layout_alignStart="@+id/user_chatting_Icon6"
        android:layout_marginLeft = "8dp"
        android:layout_marginBottom = "12dp"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_toStartOf="@+id/send_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_button"
        android:id="@+id/send_button"
        android:layout_alignBottom="@+id/chat_edit_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight = "10dp"/>

    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text1"
        android:layout_alignTop="@+id/user_chatting_Icon1"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text2"
        android:layout_alignTop="@+id/user_chatting_Icon2"
        android:layout_alignLeft="@+id/chat_text1"
        android:layout_alignStart="@+id/chat_text1"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text3"
        android:layout_alignTop="@+id/user_chatting_Icon3"
        android:layout_alignRight="@+id/send_button"
        android:layout_alignEnd="@+id/send_button"
        android:layout_alignBottom="@+id/user_chatting_Icon3"
        android:layout_alignLeft="@+id/chat_text2"
        android:layout_alignStart="@+id/chat_text2"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text4"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_chatting_Icon4"
        android:layout_toEndOf="@+id/user_chatting_Icon4"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text5"
        android:layout_alignTop="@+id/user_chatting_Icon5"
        android:layout_toRightOf="@+id/user_chatting_Icon5"
        android:layout_toEndOf="@+id/user_chatting_Icon5"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text6"
        android:layout_alignLeft="@+id/chat_text5"
        android:layout_alignStart="@+id/chat_text5"
        android:textSize="20dp"
        android:layout_alignTop="@+id/user_chatting_Icon6" />


</RelativeLayout>
