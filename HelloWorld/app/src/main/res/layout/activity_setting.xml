<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageTopView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="center"
        android:src="@drawable/tan_msg_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/machingOwl"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:src="@drawable/kindling_owl_large" />
    
    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/settings_title"
        android:layout_below="@+id/imageTopView"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/set_age_range_title"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView8" />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="center"
        android:src="@drawable/game_question_bg"
        android:id="@+id/age_range"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/intelligence_settings_title"
        android:id="@+id/intelligent"
        android:layout_below="@+id/age_range"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="center"
        android:src="@drawable/game_question_bg"
        android:id="@+id/intelligent_range"
        android:layout_below="@+id/intelligent"
        android:layout_alignLeft="@+id/intelligent"
        android:layout_alignStart="@+id/intelligent" />

</RelativeLayout>