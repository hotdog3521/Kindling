<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/word_game">

    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:scaleType="center"
       android:src="@drawable/tan_msg_background"
       android:id="@+id/imageTopView_word"
       android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
    />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/timer_bg"
        android:id="@+id/wordGame_timerBg"
        android:layout_marginRight="-17dp"
        android:layout_below="@+id/imageTopView_word"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:src="@drawable/definition_game_title"
        android:id="@+id/wordGame_title"
        android:layout_alignBottom="@+id/wordGame_timerBg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/header_owl"
        android:id="@+id/wordGame_owl"
        android:layout_below="@+id/wordGame_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/game_question_bg"
        android:id="@+id/wordGame_question"
        android:layout_alignTop="@+id/wordGame_questionText"
        android:layout_alignLeft="@+id/wordGame_answerImage1"
        android:layout_alignStart="@+id/wordGame_answerImage1" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:id="@+id/wordGame_questionText"
        android:text="Here is the Question!!!!!!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/wordGame_answerImage1"
        android:layout_below="@+id/wordGame_question"
        android:layout_marginTop = "10dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/wordGame_AnswerButton1"
        android:text="Answer 1!!"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/wordGame_answerImage1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/wordGame_answerImage2"
        android:layout_below="@+id/wordGame_answerImage1"
        android:layout_marginTop = "6dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/wordGame_AnswerButton2"
        android:text="Answer 2!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/wordGame_AnswerButton1"
        android:layout_marginTop = "9dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/wordGame_answerImage3"
        android:layout_below="@+id/wordGame_answerImage2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal = "true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/wordGame_AnswerButton3"
        android:text="Answer 3!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/wordGame_AnswerButton2"
        android:layout_marginTop = "6dp"
        android:layout_centerHorizontal = "true"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/game_answer_bg"
        android:id="@+id/wordGame_answerImage4"
        android:layout_below="@+id/wordGame_answerImage3"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal = "true"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/wordGame_AnswerButton4"
        android:text="Answer 4!!"
        android:background="@android:color/transparent"
        android:layout_below="@+id/wordGame_AnswerButton3"
        android:layout_marginTop = "9dp"
        android:layout_centerHorizontal = "true"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:id="@+id/wordGame_time"
        android:text="Timer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageTopView_word"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/wordGame_counter"
        android:text="0:30"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/wordGame_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight = "-7dp"/>




</RelativeLayout>